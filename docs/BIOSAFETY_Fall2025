  <div class="toolbar">
    <div class="title">Biology Lab Safety — Fall 2025</div>
    <div class="controls">
      <button class="btn" id="prev" aria-label="Previous slide">← Prev</button>
      <div class="progress" id="progress">1 / 20</div>
      <button class="btn" id="next" aria-label="Next slide">Next →</button>
      <button class="btn" id="toggleAll" aria-pressed="false" aria-label="Toggle all slides view">Show all</button>
      <button class="btn" id="print" aria-label="Print or Save as PDF">Print / PDF</button>
